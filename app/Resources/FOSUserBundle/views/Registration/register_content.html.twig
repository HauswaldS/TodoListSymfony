{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'register form-horizontal'}}) }}
<fieldset>
<legend> Sign up !</legend>
<div class="form-group">
    {{
        form_label(form.username, null, { 'label_attr' : { 'class' : 'col-xs-2 control-label'}})
    }}
    <div class="col-xs-10">
        {{ form_errors(form.username) }}
        {{
            form_widget(form.username, { 'attr' : { 'class' : 'form-control'}})
        }}
    </div>
</div>
<div class="form-group">
    {{ 
        form_label(form.email, null, { 'label_attr' : { 'class': 'col-xs-2 control-label'}})
    }}
    <div class="col-xs-10">
        {{ form_errors(form.email) }}
        {{
            form_widget(form.email, { 'attr' : { 'class' : 'form-control'}})
        }}    
    </div>
</div>
<div class="form-group">
    {{ 
        form_label(form.plainPassword.first, null, { 'label_attr' : { 'class':'col-xs-2 control-label'}})
    }}
    <div class="col-xs-10">
        {{ form_errors(form.plainPassword.first) }}
        {{
            form_widget(form.plainPassword.first, { 'attr' : { 'class': 'form-control' }})
        }}
    </div>
</div>
<div class="form-group">
    {{
        form_label(form.plainPassword.second, null, { 'label_attr' : { 'class': 'col-xs-2 control-label'}} )
    }}    
    <div class="col-xs-10">
    {{ form_errors(form.plainPassword.second) }}
    {{
        form_widget(form.plainPassword.second, { 'attr': { 'class': 'form-control'}})
    }}
    </div>
</div>
{#<div class="form-group">
    {{ 
        form_label(form.profilImage, null, { 'label_attr' : { 'class': 'col-xs-2 control-label'}})
     }}
     <div class="col-xs-10">
        {{ form_errors(form.profilImage) }}
        {{
            form_widget(form.profilImage, { 'attr' : { 'class':'form-control'}} )
        }}
     </div>
</div>#}
<div class="form-group">
    <div class="col-xs-4">
        <input class="btn btn-default" type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
</div>
{{ form_rest(form)}}
</fieldset>
{{ form_end(form) }}
